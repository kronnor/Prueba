<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/img_usuario"
            android:layout_width="325dp"
            android:layout_height="200dp"
            android:src="@drawable/user"
            />

        <TextView
            android:id="@+id/txt_nombre_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_usuario"
            android:text="Nombre:"
            android:textColor="@color/purple_500"
            android:textSize="26dp" />
        <EditText
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nombre_tit"
            android:hint="Ingrese su nombre"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/txt_clave_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nombre"
            android:text="Clave:"
            android:textColor="@color/purple_500"
            android:textSize="26dp" />
        <EditText
            android:id="@+id/txt_clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_clave_tit"
            android:hint="Digite su clave (min 5 caracteres)"
            android:textSize="16dp"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/txt_Rclave_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_clave"
            android:text="Repetir Clave:"
            android:textColor="@color/purple_500"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/txt_Rclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Rclave_tit"
            android:hint="Debe ser la misma clave"
            android:textSize="16dp"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/txt_Email_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Rclave"
            android:text="Email:"
            android:textColor="@color/purple_500"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/txt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Email_tit"
            android:hint="Ingrese su Email"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/txt_REmail_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Email"
            android:text="Repetir Email:"
            android:textColor="@color/purple_500"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/txt_REmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_REmail_tit"
            android:hint="Debeser el mismo Email"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/txt_Rol_tit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_REmail"
            android:text="Rol:"
            android:textColor="@color/purple_500"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/txt_Rol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Rol_tit"
            android:hint="Imgrese su rol"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            />

    </RelativeLayout>
</layout>